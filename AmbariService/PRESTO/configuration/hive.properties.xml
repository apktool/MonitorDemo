<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <property>
    <name>connector.name</name>
    <value>hive-hadoop2</value>
    <description>
       hive connector
    </description>
    <value-attributes>
        <empty-value-valid>false</empty-value-valid>
    </value-attributes>
  </property>

  <property>
    <name>hive.metastore.uri</name>
    <value>thrift://192.168.100.41:9083</value>
    <description>
       for example: thrift://192.168.100.41:9083
    </description>
    <value-attributes>
        <empty-value-valid>true</empty-value-valid>
    </value-attributes>
  </property>

  <property>
    <name>hive.config.resources</name>
    <value>/etc/hadoop/conf/core-site.xdefaultiml, /etc/hadoop/conf/hdfs-site.xml</value>
    <description>
       hive config resources
    </description>
    <value-attributes>
        <empty-value-valid>true</empty-value-valid>
    </value-attributes>
  </property>

  <property>
    <name>hive.allow-drop-table</name>
    <value>true</value>
    <description>
       whether allow drop table
    </description>
    <value-attributes>
        <type>boolean</type>
        <empty-value-valid>false</empty-value-valid>
    </value-attributes>
  </property>

</configuration>
